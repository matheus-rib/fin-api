{
  "name": "fin-api",
  "version": "1.0.0",
  "main": "src/server.ts",
  "repository": "git@github.com:matheus-rib/fin-api.git",
  "author": "Matheus Ribeiro <matt.ribeiro14@outlook.com>",
  "description": "fintech API developed in Fullcycle bootcamp",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --watch 'src/' --exec \"ts-node src/server.ts\" -e ts",
    "test": "jest --maxWorkers=1",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/config/orm/index.ts",
    "docker:test": "docker-compose -p fin-api-test -f docker-compose-test.yml run --rm test",
    "docker:migration:run": "docker-compose -f docker-compose-cli.yml run --rm cli yarn typeorm migration:run",
    "docker:migration:generate": "docker-compose -f docker-compose-cli.yml run --rm cli yarn typeorm migration:generate -- -n"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.6",
    "@nestjs/core": "^8.0.6",
    "@nestjs/platform-express": "^8.0.6",
    "@nestjs/swagger": "^5.0.9",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.3.0",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.37"
  },
  "devDependencies": {
    "@nestjs/testing": "^8.0.6",
    "@types/cors": "^2.8.12",
    "@types/faker": "^5.5.8",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "faker": "^5.5.3",
    "jest": "^27.2.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.4.0",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.3"
  }
}
